{
    "compilerOptions": {
        /* Language & Environment */
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": ["ES2022"],

        /* Output */
        "outDir": "./build",
        "rootDir": "./src",

        /* Emit */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,

        /* Strictness */
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,

        /* Path Aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@config/*": ["./src/config/*"],
            "@routes/*": ["./src/routes/*"],
            "@controllers/*": ["./src/controllers/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@services/*": ["./src/services/*"],
            "@utils/*": ["./src/utils/*"],
            "@types/*": ["./src/types/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "build"]
}
