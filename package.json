{
    "name": "talkasauras_bot",
    "version": "0.0.1",
    "description": "A telegram bot",
    "type": "module",
    "main": "./build/index.js",
    "scripts": {
        "build": "tsc && tsc-alias",
        "dev": "cross-env NODE_ENV=development tsx watch --clear-screen=true --tsconfig tsconfig.json --watch src src/index.ts",
        "start": "cross-env NODE_ENV=production node build/index.js",
        "clean:all": "node scripts/clean-all.js",
        "install:all": "node scripts/install-all.js",
        "reset:all": "node scripts/reset-all.js",
        "lint": "eslint . --fix",
        "lint:check": "eslint . --max-warnings=0",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:migrate:deploy": "prisma migrate deploy",
        "db:studio": "prisma studio",
        "db:seed": "tsx prisma/seed.ts",
        "db:reset": "prisma migrate reset"
    },
    "license": "MIT",
    "packageManager": "pnpm@10.29.3",
    "dependencies": {
        "@prisma/adapter-pg": "^7.4.0",
        "@prisma/client": "^7.4.0",
        "bullmq": "^5.69.2",
        "dotenv": "^16.6.1",
        "express": "^5.2.1",
        "ollama": "^0.6.3",
        "pino": "^10.3.1",
        "pino-pretty": "^13.1.3",
        "redis": "^5.10.0",
        "telegraf": "^4.16.3",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/express": "^5.0.6",
        "@types/node": "^25.2.3",
        "cross-env": "^10.1.0",
        "eslint": "^10.0.0",
        "prettier": "3.8.1",
        "prisma": "^7.4.0",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0"
    }
}
